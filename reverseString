
#include<stdio.h>
#define N 50
    int main(){
        char arr[N];
        int i=0;
        int ch;
        printf("Enter a message: ");

        ch = getchar();
        while (i<N && ch != '\n'){
            arr[i] =ch;
            i++;
            ch = getchar();
        }
        printf("Reversal is: ");
        
        while (arr[i-1] != '\0'){
            putchar(arr[i-1]);
            i--;
        }
        printf("\n");
        return 0;
